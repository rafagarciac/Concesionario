<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc_gaming.concesionario.DetalleActivity">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/coche_mercedes_perfil"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imgFrontal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/coche_mercedes_frontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvCaballos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPuertas"
        android:layout_below="@+id/tvPuertas"
        android:layout_marginTop="13dp"
        android:text="CABALLOS:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvMarchas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCaballos"
        android:layout_below="@+id/tvCaballos"
        android:layout_marginTop="13dp"
        android:text="MARCHAS:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvPuertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCarburante"
        android:layout_below="@+id/tvCarburante"
        android:layout_marginTop="10dp"
        android:text="PUERTAS:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvCarburante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvAnno"
        android:layout_below="@+id/tvKms"
        android:layout_marginTop="11dp"
        android:text="CARBURANTE:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvKms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KILOMETROS:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/tvAnno" />

    <TextView
        android:id="@+id/tvAnno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÑO:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_above="@+id/tvKms"
        android:layout_alignStart="@+id/imgPerfil"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/tvPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFIL"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignBottom="@+id/imgPerfil"
        android:layout_toEndOf="@+id/tvAnno" />

    <TextView
        android:id="@+id/tvFrontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRONTAL"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignBottom="@+id/imgFrontal"
        android:layout_alignEnd="@+id/imgFrontal"
        android:layout_marginEnd="39dp" />

    <ImageButton
        android:id="@+id/btnIWeb"
        style="@android:style/Widget.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/imgFrontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Switch
        android:id="@+id/swTransferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvMarchas"
        android:layout_alignTop="@+id/btnIWeb"
        android:text="TRANSFERENCIA: "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/anno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvAnno"
        android:layout_alignBottom="@+id/tvAnno"
        android:layout_alignEnd="@+id/tvFrontal"
        android:fontFamily="cursive"
        android:text="1998"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="180.000"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/carburante" />

    <TextView
        android:id="@+id/marchas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="6"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tvMarchas"
        android:layout_alignEnd="@+id/puertas" />

    <TextView
        android:id="@+id/caballos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/carburante"
        android:layout_alignTop="@+id/tvCaballos"
        android:fontFamily="cursive"
        android:text="320 CV"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carburante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/anno"
        android:layout_alignTop="@+id/tvCarburante"
        android:fontFamily="cursive"
        android:text="DIÉSEL"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/puertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="5"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tvPuertas"
        android:layout_alignStart="@+id/anno" />
</RelativeLayout>
